<UserControl x:Class="View.CellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="40"
             Height="40">
    <Border BorderBrush="Black"
            BorderThickness="1"
            Background="LightBlue">
        <Grid>
            <Ellipse>
                <Ellipse.Style>
                    <Style TargetType="Ellipse">
                        <Setter Property="Fill"
                                Value="White"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding State}"
                                         Value="Red">
                                <Setter Property="Fill"
                                        Value="Red"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding State}"
                                         Value="Yellow">
                                <Setter Property="Fill"
                                        Value="Yellow"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsWinning}"
                                    Value="True">
                                <Setter Property="Stroke"
                                        Value="Gold"/>
                                <Setter Property="StrokeThickness"
                                        Value="3"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>

            <!-- Transparent button on top to handle clicks and forward to GameViewModel.DropCommand -->
            <Button Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding DataContext.DropCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding Column}"/>
        </Grid>
    </Border>
</UserControl>